body{
}

.main-product {
	justify-content: center;
}


.product.grid .product__media-wrapper,
.product.grid .product__info-wrapper {
	max-width: 58%;
}

.product.grid .product__info-wrapper {
	padding-left: 3rem;
}
.product-form__buttons.show-only-mobile-btn.fix-add-to-cart-product {
    max-width: 100%;
}
.pc_add_cart.product-form__submit.button.button--full-width.button--primary {
    max-width: 44rem;
}

@media (max-width: 768px){
	.single-product-info-div ul li span{
		position: relative !important;
	}

	.single-product-foundational-health-section .container {
		max-width: 540px;
	}

    .product.grid .product__media-wrapper,
	.product.grid .product__info-wrapper {
		width: 100%;
		max-width: 100%;
		margin: 0px auto;
	}
	.primary-images{
		justify-content: center;
		max-width: 480px;
    margin-left: auto;
    margin-right: auto;
	}
  .product.grid .product__info-wrapper {
		padding-left: 0;
		max-width: 480px;
		margin-left: auto;
		margin-right: auto;
	}
	.slider-nav.slick-initialized.slick-slider.slick-dotted.slick-vertical{
		flex: 0 0 10%;
	}
	.slider-for.slick-initialized.slick-slider.slick-dotted{
		height: max-content;
	}
	.single-product-info-div ul li span:before{
		left: -20px;
		top: -1px;
	}
}


