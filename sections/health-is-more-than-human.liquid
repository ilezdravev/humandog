      },
   {
        "type": "image_picker",
        "id": "bg-health-image-banner-mobile",
        "label": "Custom Background Image For Mobile"
      },


	 {
        "id": "custom_text_title",
        "type": "text",
        "label": "Text box heading"
      },
{
        "id": "custom_text_title_sub",
        "type": "text",
        "label": "Text box heading-style"
      },
 {
        "id": "custom_text_title_heading",
        "type": "text",
        "label": "custom_text_title_heading"
      },
