<section class="our-vet-section">
  <div class="container">
    <div class="row">
      <h2 class="main-team-heading">{{ section.settings.main-heading-title }}</h2>
    </div>
    <div class="row">
      <div class="vet_team owl-carousel owl-theme">
        {% for block in section.blocks %}
        <div class="item">
          <img src="{{ block.settings.bannerImage1 | img_url: 'master' }}" alt="BANNER IMG">
          <h3>{{ block.settings.heading-title1 }}</h3>
          <p>{{ block.settings.sub-title1 }}</p>
        </div>
        {% endfor %}
      </div>
    </div>

  </div>
</section>

{% schema %}
  {
    "name": "OUR VET TEAM",
    "settings": [
 {
      "id": "main-heading-title",
      "type": "text",
      "label": "main-heading-title"
      }

 ],
 "blocks": [
    {
      "type": "select",
      "name": "Add Button",
      "settings": [
     {
      "id": "bannerImage1",
      "type": "image_picker",
      "label": "Banner Image1"
      },
  {
      "id": "heading-title1",
      "type": "text",
      "label": "heading-title1"
      },
  {
      "id": "sub-title1",
      "type": "html",
      "label": "sub-title1"
      }
      ]
    }
  ],

    "presets": [
      {
        "name": "OUR VET TEAM"
      }
    ]
  }
{% endschema %}
